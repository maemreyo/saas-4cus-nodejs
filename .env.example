# .env.example

# Application
NODE_ENV=development
APP_NAME="Modern Backend API"
APP_VERSION=2.0.0
PORT=3000
HOST=0.0.0.0

# Security
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-change-this
COOKIE_SECRET=your-cookie-secret-change-this-in-production

# Database
# DATABASE_URL="postgresql://user:password@localhost:5432/mydb?schema=public"
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/myapp_dev?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_ACQUIRE=60000
DATABASE_POOL_IDLE=10000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=app:

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Modern Backend <noreply@example.com>"

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# File Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_S3_BUCKET=your-s3-bucket
STORAGE_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
LOG_LEVEL=debug
LOG_PRETTY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:5173
CORS_CREDENTIALS=true

# Queue
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_JOBS_PER_WORKER=100

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_ROUTE=/docs

# Feature Flags
FEATURE_REGISTRATION_ENABLED=true
FEATURE_2FA_ENABLED=true
FEATURE_OAUTH_ENABLED=true
FEATURE_EMAIL_VERIFICATION_REQUIRED=true

# External APIs
OPENAI_API_KEY=your-openai-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Webhook
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3

# Monitoring Endpoints
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9090
